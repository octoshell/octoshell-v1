- title @organization.name

div class="well"
  = link_to 'Редактировать', [:edit, :admin, @organization], class: 'btn'
  = ' '
  = link_to 'Версии', [:admin, @organization, :versions], class: 'btn'
  - if @organization.can__close?
    = ' '
    = link_to Organization.human_state_event_name(:_close), [:admin, @organization, :close], class: 'btn btn-danger', method: :put, data: { confirm: 'Вы уверены?' }

table class="table table-bordered"
  tr
    th class="span4" = Organization.human_attribute_name(:name)
    td = @organization.name
  tr
    th = Organization.human_attribute_name(:abbreviation)
    td = @organization.abbreviation
  tr
    th = Organization.human_attribute_name(:state)
    td = @organization.human_state_name
  tr
    th = Organization.human_attribute_name(:organization_kind_id)
    td = smart_link_to @organization.organization_kind

h3 Активные проекты
= render partial: 'admin/projects/table', locals: { projects: @organization.projects.active.limit(10) }
p = link_to "Все проекты (#{@organization.projects.count})", projects_path(search: { state_in: Project.state_names, organization_id_eq: @organization.id })

h3 Активные поручительства
= render partial: 'admin/sureties/table', locals: { sureties: @organization.sureties.active.limit(10) }
p = link_to "Все поручительства (#{@organization.sureties.count})", sureties_path(search: { state_in: Surety.state_names, organization_id_eq: @organization.id })

h3 Активные сотрудники
p
  | Активных сотрудников: 
  strong #{@organization.memberships.active.count}
= render partial: 'admin/memberships/table', locals: { memberships: @organization.memberships.limit(10) }
p = link_to "Все сотрудники (#{@organization.memberships.count})", admin_memberships_path(search: { state_in: Membership.state_names, organization_id_eq: @organization.id })

h2 Объединение
= simple_form_for @organization, url: admin_organization_merge_path(@organization), method: :put, html: { class: 'form-horizontal' } do |f|
  = autocomplete :organization, f, name: :merge_id, label: "Организация"
  p Выбранная организация будет объедина с текущей.

  div class="form-actions"
    = f.button :submit, 'Объединить'
